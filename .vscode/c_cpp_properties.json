                //"${workspaceFolder}/Library",
                //"${workspaceFolder}/STM32F10x_StdPeriph_Lib_V3.5.0/Libraries/STM32F10x_StdPeriph_Driver/inc"
                "${workspaceFolder}/**"
            ]
        }
